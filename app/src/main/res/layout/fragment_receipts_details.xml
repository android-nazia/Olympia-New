<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_receipt_details"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <RelativeLayout
                android:id="@+id/llContainer"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="?attr/actionBarSize">


                <ImageView
                    android:id="@+id/left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_refund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receipt Detail"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/ic_refund"
                    android:drawableTint="@android:color/white"
                    android:drawablePadding="3dp"
                    android:layout_centerInParent="true"

                    />

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:layout_toLeftOf="@+id/save"
                    android:layout_margin="15dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Print"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/ic_print"
                    android:drawableTint="@android:color/white"
                    android:drawablePadding="3dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"
                    />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingBottom="30dp"
            >

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_receipt_black_24dp"
                        android:tint="@color/dark_blue"
                        android:layout_centerVertical="true"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/img"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        >
                        <TextView
                            android:id="@+id/order_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/order_id"
                            />
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_below="@+id/rl1"
                />

            <TextView
                android:id="@+id/cashier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cashier : "
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/view2"
                android:padding="20dp"
                android:layout_centerHorizontal="true"
                />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_below="@+id/cashier_name"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_below="@+id/view3"
                android:nestedScrollingEnabled="false"
                />

            <RelativeLayout
                android:id="@+id/rl_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerview"
                android:background="@color/colorPrimary"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"

                >

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="Total"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/total_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"

                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_total"
                android:background="@color/colorPrimary"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                >

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="Discount"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/discount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"

                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_discount"
                android:background="@color/colorPrimary"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                >

                <TextView
                    android:id="@+id/cash_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="Amount Payable"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/cash_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"

                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    />



            </RelativeLayout>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel Order"
                android:background="@drawable/btn_round"
                android:layout_below="@+id/rl_cash"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:textColor="@android:color/white"

                />


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>




</android.support.constraint.ConstraintLayout>